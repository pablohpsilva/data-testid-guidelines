{
  "name": "@pablohpsilva/data-testid-guidelines-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for data-testid guidelines packages - automatic test ID injection tools",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node scripts/build-all.js",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/node_modules",
    "install:all": "npm install && npm install --workspaces",
    "publish:all": "npm run build && npm publish --workspaces --access public",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "keywords": [
    "testing",
    "data-testid",
    "react",
    "automation",
    "monorepo"
  ],
  "author": "Pablo Henrique Silva <pablohpsilva@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pablohpsilva/data-testid-guidelines.git"
  },
  "bugs": {
    "url": "https://github.com/pablohpsilva/data-testid-guidelines/issues"
  },
  "homepage": "https://github.com/pablohpsilva/data-testid-guidelines#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.2.0"
  }
}
